@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

    <div class="col-md-offset-4 col-md-4">
        <section>
            <div class="text-center ">
                <h1 class="text-white font-weight-bold text-center  mx-auto rounded-lg ">Регистрагия</h1>
            </div>
        </section>
    </div>

<div class="row">
    <div class="col-md-offset-4 col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">               
                    <label asp-for="Input.UserName" ></label>
                    <input asp-for="Input.UserName" class="form-control  text-primary" id="username" placeholder="Потребителско име" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>                        
            </div>
            <div class="form-group">
                <label asp-for="Input.FullName"></label>
                <input asp-for="Input.FullName" class="form-control" placeholder="Имена" />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" placeholder="Имейл"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" placeholder="Парола" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control"  placeholder="Потвърди парола"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" style="background-color:#F8694A" class="btn btn-primary center-block">Регистрация</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
