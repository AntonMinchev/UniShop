@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

    <div class="col-md-offset-4 col-md-4">
        <section>
            <div class="text-center ">
                <h1  class="text-white font-weight-bold text-center  mx-auto rounded-lg ">Вход</h1>
            </div>
        </section>
    </div>
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <section>
                <form id="account" method="post">

                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Username">Потребителско име</label>
                        <input asp-for="Input.Username" class="form-control" />
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password">Парола</label>
                        <input asp-for="Input.Password" type="password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" style="background-color:#F8694A" class="btn btn-primary center-block ">Вход</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>

    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
