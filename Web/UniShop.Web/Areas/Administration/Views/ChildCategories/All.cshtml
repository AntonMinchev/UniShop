@model IEnumerable<UniShop.Web.ViewModels.ChildCategories.ChildCategoryViewModel>


@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-offset-4 col-md-4">
    <div class="text-center ">
        <h2 class="text-white font-weight-bold text-center  mx-auto rounded-lg ">Подкатегории</h2>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentCategoryName)
            </th>
            <th class="col-2 d-flex justify-content-center">
                @Html.DisplayNameFor(model => model.CountOfProducts)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParentCategoryName)
                </td>
                <td class="col">
                    @Html.DisplayFor(modelItem => item.CountOfProducts)
                </td>
                <td class="col-md-2 d-flex justify-content-around">
                    <a asp-controller="ChildCategories" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" style="background-color:coral">Промени</a>
                    <a asp-controller="ChildCategories" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Изтрий</a>

                </td>
            </tr>
        }
    </tbody>
</table>
