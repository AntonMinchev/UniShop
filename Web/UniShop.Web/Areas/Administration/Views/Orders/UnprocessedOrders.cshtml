@model IEnumerable<UniShop.Web.ViewModels.Orders.UnprocessedOrderViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "UnprocessedOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UnprocessedOrders</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstimatedDeliveryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstimatedDeliveryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    <a asp-area="Administration" asp-controller="Orders" asp-action="Processing" asp-route-id="@item.Id"><button class="btn btn-success">Обработена</button></a>
                    <button class="btn" style="background-color:coral"><a href="">Промени</a></button>
                </td>
            </tr>
        }
    </tbody>
</table>
