@model IPagedList<UniShop.Web.ViewModels.Orders.DeliveredOrderViewModel>


@{
    ViewData["Title"] = "Доставени поръчки";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-offset-4 col-md-4">
    <div class="text-center ">
        <h2 class="text-white font-weight-bold text-center  mx-auto rounded-lg ">Доставени поръчки</h2>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th class="text-center">
                Дата на поръчка
            </th>
            <th class="text-center">
                Очаквана дата на доставка
            </th>
            <th class="text-center">
                Дата на изпращане
            </th>
            <th class="text-center">
                Дата на доставка
            </th>
            <th class="text-center">
                Цена
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var deliveredOrder in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => deliveredOrder.Id)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => deliveredOrder.OrderDate)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => deliveredOrder.EstimatedDeliveryDate)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => deliveredOrder.DispatchDate)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => deliveredOrder.DeliveryDate)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => deliveredOrder.TotalPrice) лв.
                </td>
                <td class="col-md-1 d-flex justify-content-around">
                    <a asp-controller="Orders" asp-action="Details" asp-route-id="@deliveredOrder.Id" class="btn" style="background-color:coral">Детайли</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="col-lg-offset-6">
@Html.PagedListPager((IPagedList)Model, page => Url.Action("DeliveredOrders", new
       {
                                             pages = page
                                         }))
 </div> 