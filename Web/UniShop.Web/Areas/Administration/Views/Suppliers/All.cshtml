@model IEnumerable<UniShop.Web.ViewModels.Suppliers.SupplierViewModel>

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-offset-4 col-md-4">
    <div class="text-center ">
        <h2 class="text-white font-weight-bold text-center  mx-auto rounded-lg ">Доставчици</h2>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceToOffice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceToHome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => supplier.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => supplier.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => supplier.PriceToOffice)лв.
                </td>
                <td>
                    @Html.DisplayFor(modelItem => supplier.PriceToHome)лв.
                </td>
                <td class="col-md-2 d-flex justify-content-around">
                    <a asp-controller="Suppliers" asp-action="Edit" asp-route-id="@supplier.Id" class="btn" style="background-color:coral">Промени</a>
                    <a asp-controller="Suppliers" asp-action="Delete" asp-route-id="@supplier.Id" class="btn btn-danger">Изтрий</a>
                </td>
            </tr>
        }
    </tbody>
</table>
