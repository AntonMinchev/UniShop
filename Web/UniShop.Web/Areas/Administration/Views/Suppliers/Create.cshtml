@model UniShop.Web.InputModels.SupplierCreateInputModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-offset-4 col-md-4">
    <section>
        <div class="text-center ">
            <h2 class="text-white font-weight-bold text-center  mx-auto rounded-lg ">Добавяне на доставчик</h2>
        </div>
    </section>
</div>


<div class="row">
    <div class="col-md-offset-4 col-md-4">
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Име</label>
                <input asp-for="Name" class="form-control" placeholder="Име"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceToOffice" class="control-label">Цена до офис на доставчика</label>
                <input asp-for="PriceToOffice" class="form-control" placeholder="Цена до офис на доставчика"/>
                <span asp-validation-for="PriceToOffice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceToHome" class="control-label">Цена до адрес на клиента</label>
                <input asp-for="PriceToHome" class="form-control" placeholder="Цена до адрес на клиента"/>
                <span asp-validation-for="PriceToHome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добави" style="background-color:#F8694A" class="btn btn-default center-block" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
