@model UniShop.Web.InputModels.SupplierEditInputModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-offset-4 col-md-4">
    <div class="text-center ">
        <h2 class="text-white font-weight-bold text-center  mx-auto rounded-lg ">Промяна на доставчик</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-offset-4 col-md-4">
        <hr/>
        <form method="post" asp-controller="Suppliers" asp-action="Edit" asp-route-id="@Model.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceToOffice" class="control-label"></label>
                <input asp-for="PriceToOffice" class="form-control" />
                <span asp-validation-for="PriceToOffice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceToHome" class="control-label"></label>
                <input asp-for="PriceToHome" class="form-control" />
                <span asp-validation-for="PriceToHome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Запази промените" style="background-color:#F8694A" class="btn btn-default center-block" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
