@model IEnumerable<UniShop.Web.ViewModels.ParentCategories.ParentCategoryViewModel>

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        @if (this.TempData.ContainsKey("error"))
        {
            <div class="alert alert-danger alert-dismissible">
                <p class="close" data-dismiss="alert" aria-label="close">&times;</p>
                <strong>Грешка!</strong> @this.TempData["error"]
            </div>
        }
    </div>

<div class="col-md-offset-4 col-md-4">
    <div class="text-center ">
        <h2 class="text-white font-weight-bold text-center  mx-auto rounded-lg ">Основни категории</h2>
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChildCategoriesCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChildCategoriesCount)
                </td>
                <td class="col-md-2 d-flex justify-content-around">
                    <a asp-controller="ParentCategories" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" style="background-color:coral">Промени</a>
                    <a asp-controller="ParentCategories" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Изтрий</a>

                </td>
            </tr>
        }
    </tbody>
</table>
