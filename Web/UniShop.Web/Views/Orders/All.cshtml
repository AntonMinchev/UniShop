@model IPagedList<UniShop.Web.ViewModels.Orders.AllOrdersViewModel>

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="col-md-offset-4 col-md-4">
    <div class="text-center ">
        <h2 class="text-white font-weight-bold text-center  mx-auto rounded-lg ">Мойте поръчки</h2>
    </div>
</div>
<table class="table border-collapse">
    <thead>
        <tr>
            <th class="text-center">
                Номер на поръчката
            </th>
            <th class="text-center">
                Статус на поръчката
            </th>
            <th class="text-center">
                Дата на поръчката
            </th>
            <th class="text-center">
                Очакрана дата на доставка
            </th>
            <th class="text-center">
                Дата на доставка
            </th>
            <th class="text-center">
                Дата на изпращане на поръчката
            </th>
            <th>
               Сума
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.OrderStatus)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.EstimatedDeliveryDate)
                </td>
                <td class="text-center">
                    @(item.DeliveryDate.HasValue ? item.DeliveryDate.Value.ToString("MM/dd/yyyy") : "")
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.DispatchDate)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td class="col-md-1 d-flex justify-content-around">
                    <a asp-controller="Orders" asp-action="Details" asp-route-id="@item.Id" class="btn" style="background-color:coral">Детайли</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("All", new
       {
                                             pages = page
                                         }))