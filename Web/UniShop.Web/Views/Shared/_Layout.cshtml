@using Microsoft.AspNetCore.Identity
@using UniShop.Data.Models
@using UniShop.Web.Components

@inject SignInManager<UniShopUser> SignInManager
@inject UserManager<UniShopUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="~/logo.png" />
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>UniShop</title>


    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Hind:400,700" rel="stylesheet">

    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="~/css/bootstrap.min.css" />

    <!-- Slick -->
    <link type="text/css" rel="stylesheet" href="~/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="~/css/slick-theme.css" />

    <!-- nouislider -->
    <link type="text/css" rel="stylesheet" href="~/css/nouislider.min.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="~/css/font-awesome.min.css">

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="~/css/style.css" />


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="~/js/jquery.min.js"></script>
    @*<script src="~/js/popper.min.js"></script>*@
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/slick.min.js"></script>
    <script src="~/js/nouislider.min.js"></script>
    <script src="~/js/jquery.zoom.min.js"></script>
    <script src="~/js/main.js"></script>




</head>

<body>
    <!-- HEADER -->
    <header>
        <!-- header -->
        <div id="header">
            <div class="container">
                <div class="pull-left">
                    <!-- Logo -->
                    <div class="header-logo">
                        <a class="logo" href="/">
                            <img src="~/logo.png" alt="">
                        </a>
                    </div>
                    <!-- /Logo -->
                    <!-- Search -->
                    <!-- /Search -->
                </div>
                <div class="pull-right">
                    <ul class="header-btns">
                        <li class="header-account dropdown default-dropdown">


                            <!-- Account -->
                            @if (this.User.Identity.IsAuthenticated)
                            {
                            <li class="header-account dropdown default-dropdown">
                                <div class="dropdown-toggle" role="button" data-toggle="dropdown" aria-expanded="true">
                                    <div class="header-btns-icon">
                                        <i class="fa fa-user-o"></i>
                                    </div>
                                    <strong >Здравей,@this.UserManager.GetUserName(User)<i class="fa fa-caret-down"></i></strong>
                                </div>
                                <a href="/Identity/Account/Logout" class="text-uppercase">Изход</a>
                                <ul class="custom-menu">
                                    <li><a href="#"><i class="fa fa-user-o"></i> Моите поръчки</a></li>
                                    <li><a href="#"><i class="fa fa-heart-o"></i> Любими</a></li>
                                    <li><a href="#"><i class="fa fa-exchange"></i>Моят профил</a></li>
                                </ul>
                            </li>
                            @await Component.InvokeAsync(typeof(ShoppingCartComponent))

                          
                            <li class="nav-toggle">
                                <button class="nav-toggle-btn main-btn icon-btn"><i class="fa fa-bars"></i></button>
                            </li>
                        }
                        else
                        {
                            <li class="header-account dropdown default-dropdown">
                                <div class="dropdown-toggle" role="button" data-toggle="dropdown" aria-expanded="true">
                                    <div class="header-btns-icon">
                                        <i class="fa fa-user-o"></i>
                                    </div>
                                    <strong>Моят акаунт <i class="fa fa-caret-down"></i></strong>
                                </div>
                                <a href="/Identity/Account/Login" >Вход</a> / <a href="/Identity/Account/Register">Регистрация</a>
                                <ul class="custom-menu">
                                    <li><a href="#"><i class="fa fa-user-o"></i> My Account</a></li>
                                    <li><a href="#"><i class="fa fa-heart-o"></i> My Wishlist</a></li>
                                    

                                </ul>
                            </li>
                            @await Component.InvokeAsync(typeof(ShoppingCartComponent))

                            <li class="nav-toggle">
                                <button class="nav-toggle-btn main-btn icon-btn"><i class="fa fa-bars"></i></button>
                            </li>
                        }
                            <!-- /Account -->
                            <!-- Cart -->
                            <!-- /Cart -->
                            <!-- Mobile nav toggle-->
                            <!-- / Mobile nav toggle -->
                        </ul>
                </div>
            </div>
            <!-- header -->
        </div>
        <!-- container -->
    </header>
    <!-- /HEADER -->
    <!-- NAVIGATION -->
    <!-- category nav -->
    @await Component.InvokeAsync(typeof(CategoryComponent))

    <!-- /NAVIGATION -->
    <!-- section -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <main>
                    @RenderBody()
                </main>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /section -->
    <!-- FOOTER -->
    <footer id="footer" class="section section-grey">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!-- footer widget -->
                <div class="col-md-3 col-sm-6 col-xs-6">
                    <div class="footer">
                        <!-- footer logo -->
                        <div class="footer-logo">
                            <a class="logo" href="/">
                                <img src="~/logo.png" alt="">
                            </a>
                        </div>
                        <!-- /footer logo -->

                        <p>В нашият магазин може да намерите всичко от което имате нужда!</p>

                    </div>
                </div>
                <!-- /footer widget -->
                <!-- footer widget -->
                <div class="col-md-3 col-sm-6 col-xs-6">
                    <div class="footer">
                        <h3 class="footer-header">Моят Акаунт</h3>
                        <ul class="list-links">
                            <li><a href="/Identity/Account/Manage/Index">Моят Акаунт</a></li>
                            <li><a href="#">Любими</a></li>
                            <li><a href="#">Вход</a></li>
                        </ul>
                    </div>
                </div>
                <!-- /footer widget -->

                <div class="clearfix visible-sm visible-xs"></div>

                <!-- footer widget -->
                <div class="col-md-3 col-sm-6 col-xs-6">
                    <div class="footer">
                        <h3 class="footer-header">Доставка</h3>
                        <ul class="list-links">
                            <li><a href="/Home/PackageDelivery">Доставка на поръчките</a></li>
                            <li><a href="/Home/Warranty">30 дни право на връщане</a></li>
                            <li><a href="/Home/ReturnShipment">Гаранция и Сервиз</a></li>
                        </ul>
                    </div>
                </div>
                <!-- /footer widget -->
                <div class="col-md-3 col-sm-6 col-xs-6">
                    <div class="footer">
                        <h3 class="footer-header">Връзка с нас</h3>
                        <ul class="list-links">
                            <li><a href="#">За Нас</a></li>
                            <li><a href="/Home/Contacts">Контакти</a></li>
                            <li><a href="#">Форма за запитвания</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- /row -->
            <hr>
            <!-- row -->
            <div class="row">
                <div class="col-md-8 col-md-offset-2 text-center">
                    <!-- footer copyright -->
                    <div class="footer-copyright">
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        Copyright &copy;
                        <script>document.write(new Date().getFullYear());</script> All rights reserved !</a>
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    </div>
                    <!-- /footer copyright -->
                </div>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </footer> @RenderSection("Scripts", required: false)
    <!-- /FOOTER -->
    <!-- jQuery Plugins -->



</body>


</html>

<script src="~/js/jquery.min.js"></script>


<script src="~/js/slick.min.js"></script>

<script src="~/js/jquery.zoom.min.js"></script>
<script src="~/js/main.js"></script>
